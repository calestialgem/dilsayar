{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Linux) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug",
            "args": [
                "dil.dil",
                "test\\multi_start.dil",
                "test\\no_start.dil",
                "test\\redefinition.dil",
                "test\\undefined_reference.dil",
                "test\\redundant_skip.dil",
                "test\\left_recursion.dil"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/res",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug.exe",
            "args": [
                "dil.dil",
                "test\\multi_start.dil",
                "test\\no_start.dil",
                "test\\redefinition.dil",
                "test\\undefined_reference.dil",
                "test\\redundant_skip.dil",
                "test\\left_recursion.dil"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/res",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
